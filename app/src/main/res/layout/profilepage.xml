<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLogin">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-black"
        android:text="My profile"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_anchor="@+id/title"
        app:layout_anchorGravity="start"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <Button
        android:id="@+id/profile"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginTop="640dp"
        android:backgroundTint="#9C27B0"
        android:text="Save"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_anchor="@+id/title"
        app:layout_anchorGravity="bottom|center"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="530dp"
        app:layout_anchor="@+id/title"
        app:layout_anchorGravity="bottom|center">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".UserLogin">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10sp"
                android:hint="edit"
                app:srcCompat="@drawable/profile_pic"
                />

            <EditText
                android:id="@+id/userName"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="220sp"
                android:layout_marginLeft="26dp"
                android:ems="10"
                android:hint="Current_user_name"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/picture"
                app:layout_anchorGravity="bottom|center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <EditText
                android:id="@+id/age"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="300dp"
                android:ems="10"
                android:hint="Current_age"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/userName"
                app:layout_anchorGravity="bottom|center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userName"
                />

            <CheckBox
                android:id="@+id/Soccer"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="380dp"
                android:ems="10"
                android:hint="Soccer"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/age"
                app:layout_anchorGravity="bottom|center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userName" />

            <CheckBox
                android:id="@+id/Tennis"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="460dp"
                android:ems="10"
                android:hint="Tennis"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/Soccer"
                app:layout_anchorGravity="bottom|center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userName" />

            <CheckBox
                android:id="@+id/Gym"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="540dp"
                android:ems="10"
                android:hint="Gym"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/Tennis"
                app:layout_anchorGravity="bottom|center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userName" />

            <CheckBox
                android:id="@+id/Basketball"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="620dp"
                android:ems="10"
                android:hint="Basketball"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/Gym"
                app:layout_anchorGravity="bottom|center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userName" />

            <CheckBox
                android:id="@+id/Hockey"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="700dp"
                android:ems="10"
                android:hint="Hockey"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/Basketball"
                app:layout_anchorGravity="bottom|center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userName" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>