<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLogin">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-black"
        android:text="My profile"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_anchor="@+id/title"
        app:layout_anchorGravity="start"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <Button
        android:id="@+id/profile"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginTop="640dp"
        android:backgroundTint="#9C27B0"
        android:text="Save"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_anchor="@+id/title"
        app:layout_anchorGravity="bottom|center"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginTop="100dp"
        app:layout_anchor="@+id/title"
        app:layout_anchorGravity="bottom|center">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".UserLogin">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10sp"
                android:hint="edit"
                app:srcCompat="@drawable/profile_pic" />

            <EditText
                android:id="@+id/description"
                android:layout_width="360dp"
                android:layout_height="140dp"
                android:layout_marginTop="220dp"
                android:ems="10"
                android:text="Description"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/picture"
                app:layout_anchorGravity="bottom|center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userName" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="370sp"
                android:ems="10"
                android:inputType="text"
                android:text="Current_user_name"
                android:textSize="24sp"
                app:layout_anchor="@+id/picture"
                app:layout_anchorGravity="bottom|center" />

            <EditText
                android:id="@+id/age"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="450dp"
                android:ems="10"
                android:text="Current_age"
                android:inputType="number"
                android:textSize="24sp"
                app:layout_anchor="@+id/userName"
                app:layout_anchorGravity="bottom|center"/>

            <EditText
                android:id="@+id/Price"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="530dp"
                android:ems="10"
                android:text="Price/hour"
                android:inputType="numberDecimal"
                android:textSize="24sp"
                app:layout_anchor="@+id/userName"
                app:layout_anchorGravity="bottom|center"/>

            <CheckBox
                android:id="@+id/Soccer"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="610dp"
                android:ems="10"
                android:text="Soccer"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/age"
                app:layout_anchorGravity="bottom|center" />

            <Spinner
                android:id="@+id/SpinnerSoccer"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                app:layout_anchor="@+id/Soccer"
                app:layout_anchorGravity="center|right"
                />

            <CheckBox
                android:id="@+id/Tennis"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="690dp"
                android:ems="10"
                android:text="Tennis"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/Soccer"
                app:layout_anchorGravity="bottom|center"/>

            <Spinner
                android:id="@+id/SpinnerTennis"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                app:layout_anchor="@+id/Tennis"
                app:layout_anchorGravity="center|right"
                />

            <CheckBox
                android:id="@+id/Gym"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="770dp"
                android:ems="10"
                android:text="Gym"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/Tennis"
                app:layout_anchorGravity="bottom|center" />

            <Spinner
                android:id="@+id/SpinnerGym"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                app:layout_anchor="@+id/Gym"
                app:layout_anchorGravity="center|right"
                />

            <CheckBox
                android:id="@+id/Basketball"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="850dp"
                android:ems="10"
                android:text="Basketball"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/Gym"
                app:layout_anchorGravity="bottom|center"/>

            <Spinner
                android:id="@+id/SpinnerBasketball"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                app:layout_anchor="@+id/Basketball"
                app:layout_anchorGravity="center|right"
                />

            <CheckBox
                android:id="@+id/Hockey"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="930dp"
                android:ems="10"
                android:text="Hockey"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/Basketball"
                app:layout_anchorGravity="bottom|center" />

            <Spinner
                android:id="@+id/SpinnerHockey"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                app:layout_anchor="@+id/Hockey"
                app:layout_anchorGravity="center|right"
                />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>