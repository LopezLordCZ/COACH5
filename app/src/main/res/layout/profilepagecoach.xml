<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-black"
        android:text="My profile"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_anchor="@+id/title"
        app:layout_anchorGravity="start"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <Button
        android:id="@+id/profile"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginTop="640dp"
        android:backgroundTint="#9C27B0"
        android:text="Save"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_anchor="@+id/title"
        app:layout_anchorGravity="bottom|center"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="530dp"
        app:layout_anchor="@+id/title"
        app:layout_anchorGravity="bottom|center">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".UserLogin">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10sp"
                android:hint="edit"
                app:srcCompat="@drawable/profile_pic"
                />

            <EditText
                android:id="@+id/Description"
                android:layout_width="360dp"
                android:layout_height="140dp"
                android:layout_marginTop="220sp"
                android:layout_marginLeft="26dp"
                android:ems="10"
                android:text="Description"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/picture"
                app:layout_anchorGravity="bottom|center"
                />

            <EditText
                android:id="@+id/userName"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="370sp"
                android:layout_marginLeft="26dp"
                android:ems="10"
                android:text="Current_user_name"
                android:inputType="text"
                android:textSize="24sp"
                app:layout_anchor="@+id/picture"
                app:layout_anchorGravity="bottom|center"
                />

            <EditText
                android:id="@+id/price"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="450dp"
                android:ems="10"
                android:text="price/hour"
                android:inputType="numberDecimal"
                android:textSize="24sp"
                app:layout_anchor="@+id/userName"
                app:layout_anchorGravity="bottom|center"
                />

            <EditText
                android:id="@+id/age"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="530dp"
                android:ems="10"
                android:text="Current_age"
                android:inputType="number"
                android:textSize="24sp"
                app:layout_anchor="@+id/userName"
                app:layout_anchorGravity="bottom|center"
                />

            <Spinner
                android:id="@+id/Sport1"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginTop="610dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                app:layout_anchor="@+id/age"
                app:layout_anchorGravity="bottom|left" />

            <Spinner
                android:id="@+id/skill_level1"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginTop="610dp"
                android:layout_marginRight="10dp"
                app:layout_anchor="@+id/age"
                app:layout_anchorGravity="bottom|right" />

            <Spinner
                android:id="@+id/Sport2"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginTop="690dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                app:layout_anchor="@+id/age"
                app:layout_anchorGravity="bottom|left" />

            <Spinner
                android:id="@+id/skill_level2"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginTop="690dp"
                android:layout_marginRight="10dp"
                app:layout_anchor="@+id/age"
                app:layout_anchorGravity="bottom|right" />

            <Spinner
                android:id="@+id/Sport3"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginTop="770dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                app:layout_anchor="@+id/age"
                app:layout_anchorGravity="bottom|left" />

            <Spinner
                android:id="@+id/skill_level3"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginTop="770dp"
                android:layout_marginRight="10dp"
                app:layout_anchor="@+id/age"
                app:layout_anchorGravity="bottom|right" />

            <Button
                android:id="@+id/location"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="850dp"
                android:backgroundTint="#9C27B0"
                android:text="Update location"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:layout_anchor="@+id/age"
                app:layout_anchorGravity="bottom|center"
                />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>